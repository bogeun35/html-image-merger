    <script>
        let extractedUrls = [];
        let excludedIndices = new Set();
        
        // HTMLì—ì„œ ì´ë¯¸ì§€ URL ì¶”ì¶œ
        function extractImages() {
            const htmlInput = document.getElementById('htmlInput').value.trim();
            const urlInput = document.getElementById('urlInput');
            const previewContainer = document.getElementById('imagePreviewContainer');
            const previewGrid = document.getElementById('previewGrid');
            
            if (!htmlInput) {
                showStatus('âš ï¸ HTML ì½”ë“œë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.', 'warning');
                return;
            }
            
            try {
                // ì„ì‹œ DOM íŒŒì„œ ìƒì„±
                const parser = new DOMParser();
                const doc = parser.parseFromString(htmlInput, 'text/html');
                
                // img íƒœê·¸ì—ì„œ src ì¶”ì¶œ
                const images = doc.querySelectorAll('img');
                const urls = [];
                
                images.forEach(img => {
                    const src = img.getAttribute('src');
                    if (src && src.trim()) {
                        urls.push(src.trim());
                    }
                });
                
                if (urls.length === 0) {
                    showStatus('âš ï¸ HTMLì—ì„œ ì´ë¯¸ì§€ URLì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.', 'warning');
                    return;
                }
                
                // ì „ì—­ ë³€ìˆ˜ì— ì €ì¥
                extractedUrls = urls;
                excludedIndices.clear();
                
                // URL ì…ë ¥ë€ì— ì±„ìš°ê¸°
                updateUrlInput();
                
                // ë¯¸ë¦¬ë³´ê¸° ìƒì„±
                previewGrid.innerHTML = '';
                urls.forEach((url, index) => {
                    const previewItem = document.createElement('div');
                    previewItem.className = 'preview-item';
                    previewItem.dataset.index = index;
                    previewItem.onclick = () => toggleImageSelection(index);
                    
                    previewItem.innerHTML = `
                        <img src="${url}" alt="ì´ë¯¸ì§€ ${index + 1}" onerror="this.src='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%22100%22 height=%22100%22><text x=%2250%%22 y=%2250%%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22%23999%22>ë¡œë“œ ì‹¤íŒ¨</text></svg>'">
                        <div class="url-text" title="${url}">${url}</div>
                    `;
                    
                    previewGrid.appendChild(previewItem);
                });
                
                previewContainer.style.display = 'block';
                
                showStatus(`âœ… ${urls.length}ê°œì˜ ì´ë¯¸ì§€ URLì„ ì¶”ì¶œí–ˆìŠµë‹ˆë‹¤!`, 'success');
                
                // ë¯¸ë¦¬ë³´ê¸°ë¡œ ìŠ¤í¬ë¡¤
                previewContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
            } catch (error) {
                showStatus(`âŒ HTML íŒŒì‹± ì˜¤ë¥˜: ${error.message}`, 'error');
                console.error(error);
            }
        }
        
        // ì´ë¯¸ì§€ ì„ íƒ/í•´ì œ í† ê¸€
        function toggleImageSelection(index) {
            const previewItem = document.querySelector(`.preview-item[data-index="${index}"]`);
            
            if (excludedIndices.has(index)) {
                excludedIndices.delete(index);
                previewItem.classList.remove('excluded');
            } else {
                excludedIndices.add(index);
                previewItem.classList.add('excluded');
            }
            
            updateUrlInput();
        }
        
        // ì „ì²´ ì„ íƒ
        function selectAllImages() {
            excludedIndices.clear();
            document.querySelectorAll('.preview-item').forEach(item => {
                item.classList.remove('excluded');
            });
            updateUrlInput();
            showStatus('âœ… ëª¨ë“  ì´ë¯¸ì§€ê°€ ì„ íƒë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
        }
        
        // ì „ì²´ í•´ì œ
        function deselectAllImages() {
            extractedUrls.forEach((_, index) => {
                excludedIndices.add(index);
            });
            document.querySelectorAll('.preview-item').forEach(item => {
                item.classList.add('excluded');
            });
            updateUrlInput();
            showStatus('âŒ ëª¨ë“  ì´ë¯¸ì§€ê°€ í•´ì œë˜ì—ˆìŠµë‹ˆë‹¤.', 'info');
        }
        
        // URL ì…ë ¥ë€ ì—…ë°ì´íŠ¸
        function updateUrlInput() {
            const urlInput = document.getElementById('urlInput');
            const selectedUrls = extractedUrls.filter((_, index) => !excludedIndices.has(index));
            urlInput.value = selectedUrls.join('\n');
        }
        
        // ì´ë¯¸ì§€ ë³‘í•©
        async function mergeImages() {
            const input = document.getElementById('urlInput').value.trim();
            const status = document.getElementById('status');
            const preview = document.getElementById('preview');
            const progressBar = document.getElementById('progressBar');
            const progressFill = document.getElementById('progressFill');
            
            // ì´ˆê¸°í™”
            preview.style.display = 'none';
            preview.innerHTML = '';
            
            // URL íŒŒì‹±
            const urls = input.split('\n')
                .map(url => url.trim())
                .filter(url => url.length > 0);
            
            if (urls.length === 0) {
                showStatus('âš ï¸ ì´ë¯¸ì§€ URLì„ ì…ë ¥í•´ì£¼ì„¸ìš”.', 'warning');
                return;
            }
            
            showStatus(`${urls.length}ê°œì˜ ì´ë¯¸ì§€ ë‹¤ìš´ë¡œë“œ ì¤‘...`, 'info');
            progressBar.style.display = 'block';
            
            try {
                // ì´ë¯¸ì§€ ë‹¤ìš´ë¡œë“œ
                const images = [];
                for (let i = 0; i < urls.length; i++) {
                    const url = urls[i];
                    
                    const img = await loadImage(url);
                    images.push(img);
                    
                    const progress = ((i + 1) / urls.length) * 100;
                    progressFill.style.width = progress + '%';
                    showStatus(`ì´ë¯¸ì§€ ë‹¤ìš´ë¡œë“œ ì¤‘... (${i + 1}/${urls.length})`, 'info');
                }
                
                showStatus('ì´ë¯¸ì§€ ë³‘í•© ì¤‘...', 'info');
                
                // ìº”ë²„ìŠ¤ ìƒì„±
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                
                // ìµœëŒ€ ë„ˆë¹„ì™€ ì´ ë†’ì´ ê³„ì‚°
                const maxWidth = Math.max(...images.map(img => img.width));
                const totalHeight = images.reduce((sum, img) => sum + img.height, 0);
                
                canvas.width = maxWidth;
                canvas.height = totalHeight;
                
                // ë°°ê²½ í°ìƒ‰
                ctx.fillStyle = 'white';
                ctx.fillRect(0, 0, maxWidth, totalHeight);
                
                // ì´ë¯¸ì§€ ë¶™ì´ê¸°
                let currentY = 0;
                for (const img of images) {
                    const x = (maxWidth - img.width) / 2; // ì¤‘ì•™ ì •ë ¬
                    ctx.drawImage(img, x, currentY);
                    currentY += img.height;
                }
                
                // ê²°ê³¼ í‘œì‹œ
                const dataUrl = canvas.toDataURL('image/jpeg', 0.95);
                
                preview.innerHTML = `
                    <h3 style="margin-bottom: 15px; color: #333;">âœ… ë³‘í•© ì™„ë£Œ!</h3>
                    <p style="margin-bottom: 15px; color: #666;">í¬ê¸°: ${maxWidth} x ${totalHeight} px</p>
                    <img src="${dataUrl}" alt="ë³‘í•©ëœ ì´ë¯¸ì§€">
                    <button class="btn-primary" style="margin-top: 20px; width: 100%;" onclick="downloadImage('${dataUrl}')">
                        ğŸ’¾ ì´ë¯¸ì§€ ë‹¤ìš´ë¡œë“œ
                    </button>
                `;
                preview.style.display = 'block';
                
                showStatus(`âœ… ${images.length}ê°œ ì´ë¯¸ì§€ ë³‘í•© ì™„ë£Œ!`, 'success');
                progressBar.style.display = 'none';
                
                // ê²°ê³¼ë¡œ ìŠ¤í¬ë¡¤
                preview.scrollIntoView({ behavior: 'smooth', block: 'start' });
                
            } catch (error) {
                showStatus(`âŒ ì˜¤ë¥˜ ë°œìƒ: ${error.message}`, 'error');
                progressBar.style.display = 'none';
                console.error(error);
            }
        }
        
        function loadImage(url) {
            return new Promise((resolve, reject) => {
                const img = new Image();
                img.crossOrigin = 'Anonymous'; // CORS ì²˜ë¦¬
                img.onload = () => resolve(img);
                img.onerror = () => reject(new Error(`ì´ë¯¸ì§€ ë¡œë“œ ì‹¤íŒ¨: ${url}`));
                img.src = url;
            });
        }
        
        function downloadImage(dataUrl) {
            const link = document.createElement('a');
            link.download = `merged_image_${Date.now()}.jpg`;
            link.href = dataUrl;
            link.click();
        }
        
        function showStatus(message, type) {
            const status = document.getElementById('status');
            status.textContent = message;
            status.className = `status-${type}`;
            status.style.display = 'block';
        }
        
        function clearHtml() {
            document.getElementById('htmlInput').value = '';
            document.getElementById('imagePreviewContainer').style.display = 'none';
            document.getElementById('previewGrid').innerHTML = '';
            extractedUrls = [];
            excludedIndices.clear();
            showStatus('HTML ì…ë ¥ë€ì´ ì´ˆê¸°í™”ë˜ì—ˆìŠµë‹ˆë‹¤.', 'info');
        }
        
        function clearAll() {
            document.getElementById('htmlInput').value = '';
            document.getElementById('urlInput').value = '';
            document.getElementById('status').style.display = 'none';
            document.getElementById('preview').style.display = 'none';
            document.getElementById('progressBar').style.display = 'none';
            document.getElementById('imagePreviewContainer').style.display = 'none';
            document.getElementById('previewGrid').innerHTML = '';
            extractedUrls = [];
            excludedIndices.clear();
            showStatus('ëª¨ë“  ë‚´ìš©ì´ ì´ˆê¸°í™”ë˜ì—ˆìŠµë‹ˆë‹¤.', 'info');
        }
    </script>
